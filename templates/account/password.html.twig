{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe | Alice CRM{% endblock %}

{% block body %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

    <div class="d-flex align-items-center justify-content-between mb-3">
		<h1>Modifier mon mot de passe</h1>
		        <div class="button-go-back" alt="Retour page précédente" onclick="window.history.back();">
            <i class="fa-sharp fa-solid fa-circle-chevron-left fa-2xl"></i>
        </div>
    </div>

	<hr>

    <div class="form mt-3 mt-lg-0">

		{% if notificationOk %}
			<div class="alert alert-info">{{ notificationOk }}</div>
		{% endif %}
		{% if notificationError %}
			<div class="alert alert-danger">{{ notificationError }}</div>
		{% endif %}


		{{ form(form) }}

	</div>

    
{% endblock %}