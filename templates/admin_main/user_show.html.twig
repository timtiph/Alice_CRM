{% extends 'base.html.twig' %}

{% block title %}{{ user.lastname|upper }} {{ user.firstname|capitalize }} | Alice CRM{% endblock %}

{% block body %}



<h1 class="mb-5">Utilisateur : {{ user.firstname|capitalize }} {{ user.lastname|upper }}</h1>
<div class="d-flex justify-content-center justify-content-sm-end">
    <a href="{{ path('app_users_list') }}" class="btn btn-block btn-alice-lg">Liste utilisateurs</a> 
</div>

{# identification USER #}

    <div class="card m-2">
        <div class="card-body bgg-alice-light d-flex justify-content-between flex-column flex-sm-row align-items-center">
            <div class="d-flex flex-column justify-content-around col-lg-6 align-items-center">
                <h5 class="card-title">{{ user.firstname|capitalize }} {{ user.lastname|upper }}</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">{{ user.email }}</h6>
                <p class="card-text">Role : 
                    {% if user.role is null %}
                    <a href="{{ path('app_user_edit', { 'id': user.id, 'slug': user.slug}) }}"><img src="{{ asset('assets/img/VectorWarning.png') }}" alt="Attention"></a>
                    {% endif %}
                    {{ user.role }}</p>
            </div>
        {% if user.role == "ADMIN" %}
        {% else %}
            <div class="d-flex flex-column justify-content-around col-lg-6 align-items-center">
                <a href="{{ path('app_user_edit', { 'id': user.id, 'slug': user.slug}) }}" class="btn btn-block btn-alice-lg">Modifier</a><br>
                {% if user.customer is null %}
                <a href="{{ path('app_customer_add', { 'id': user.id, 'slug': user.slug}) }}" class="btn btn-block btn-alice-lg">Cr√©er une fiche client</a> 
                {% endif %}
            </div>
        {% endif %}

        </div>
    </div>

    {# identification client  #}
    {% if user.customer %}

    <div class="card m-2 mt-3">
        <div class="card-body bgg-alice-light d-flex justify-content-between flex-column flex-sm-row align-items-center">
            <div class="d-flex flex-column justify-content-around col-lg-6 align-items-center">
                <h5 class="card-title">Fiche client</h5>
            </div>
            <div class="d-flex flex-column justify-content-around col-lg-6 align-items-center">
                <h5 class="card-title text-center">{{ user.customer.name }}</h5>
                <a href="{{ path('app_customer', { 'id': user.customer.id, 'slug': user.customer.slug}) }}" class="btn btn-block btn-alice-lg">Consulter la fiche client</a> 
            </div>
        </div>
    </div>

    {% endif %}
    {% if user.role == "ADMIN" %}
    {% else %}
    
    <div class="card m-2 mt-3 bgg-alice-light">

        {# identification Contact Principal #}

        <div class="bgg-alice-light">
            <div class="card-body bgg-alice-light d-flex justify-content-between flex-column flex-sm-row align-items-center">
                <div class="d-flex flex-column justify-content-around col-lg-6 align-items-center">
                    <h5 class="card-title">Contacts</h5>
                </div>
                <div class="d-flex flex-column justify-content-around col-lg-6 align-items-center">
                    <a href="{{ path('app_contact_add', { 'id': user.id, 'slug': user.slug }) }}" class="btn btn-block btn-alice-lg">Ajouter un contact</a>
                </div>
            </div>
        </div>

        <div class="card m-2 bgg-alice-light">
        <h6 class="text-center my-2 col-12">Contact Pricipal</h6>
            <div class="card-body d-flex justify-content-between flex-column flex-sm-row align-items-center">
                <div class="d-flex flex-column flex-md-row justify-content-around align-items-center col-12">
                    <div class="col-12 col-md-6 d-flex flex-column align-items-center">
                    {% if contacts %}
                        {% for contact in contacts %}
                            {% if contact.isMain == true %}
                                <div class="card bgg-alice-light m-1" style="max-width: 20rem; min-width: 15rem">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ contact.firstname }} {{ contact.lastname }}</h5>
                                        <p class="card-subtitle mb-2 text-body-secondary">{{ contact.position }}</p>
                                        <p class="card-subtitle mb-2">{{ contact.email }}</p>
                                        <p class="card-subtitle mb-2">{{ contact.phone }}</p>
                                        <div class="d-flex justify-content-center">
                                            <a href="{{ path('app_contact', { 'id': contact.id, 'slug': contact.slug}) }}" class="my-auto mx-1"><img src="{{ asset('assets/img/eye-solid.svg') }}" alt="Bouton Consulter" class="buttonEditContact"></a>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# contacts secondaires #}

        <div class="card m-2 bgg-alice-light">
        <h6 class="text-center my-2 col-12">Autres Contacts</h6>
            <div class="card-body d-flex justify-content-between flex-column flex-sm-row align-items-center">
                <div class="d-flex flex-column flex-md-row justify-content-around align-items-center col-12">
                    <div class="col-12 d-flex flex-column align-items-center flex-sm-row flex-sm-wrap justify-content-sm-around">
                    {% if contacts %}
                        {% for contact in contacts %}
                            {% if contact.isMain == false %}
                                    <div class="card m-1 bgg-alice-light" style="max-width: 20rem; min-width: 15rem">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ contact.firstname }} {{ contact.lastname }}</h5>
                                            <p class="card-subtitle mb-2 text-body-secondary">{{ contact.position }}</p>
                                            <p class="card-subtitle mb-2">{{ contact.email }}</p>
                                            <p class="card-subtitle mb-2">{{ contact.phone }}</p>
                                            <div class="d-flex justify-content-center">
                                                <a href="{{ path('app_contact', { 'id': contact.id, 'slug': contact.slug}) }}" class="my-auto mx-1"><img src="{{ asset('assets/img/eye-solid.svg') }}" alt="Bouton Consulter" class="buttonEditContact"></a>
                                            </div>
                                        </div>
                                    </div>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}




{% endblock %}
