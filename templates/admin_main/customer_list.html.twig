{% extends 'base.html.twig' %}

{% block title %}Mes clients | Alice CRM{% endblock %}

{% block body %}



<h1 class="mb-5">Liste des clients</h1>

    <div class="justify-content-center justify-content-md-end mx-md-5 new-user">
        <p class="m-0 text-center">Pour ajouter un <strong>nouveau client</strong>, merci de lui cr√©er un espace utilisateur :  
            <a href=" {{ path('app_user_add') }} " class="btn btn-alice-lg ms-5">Nouvel Utilisateur</a>
        </p>
    </div>

    <div class="table-responsive mt-5">

        <table class="table">

            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Ville</th>
                    {# <th scope="col">Pays</th> #}
                    <th scope="col">Client Pro</th>
                    <th scope="col">Partenaire</th>
                    <th scope="col">Nom du USER</th>
                    {# <th scope="col">Contact Principal</th> #}
                </tr>
            </thead>

            {% for customer in customers %}

                <tbody>
                    <tr>
                        <td><a href=" {{ path('app_customer', { 'id': customer.id, 'slug': customer.slug}) }} ">{{ customer.name }}</a></td>
                        <td>{{ customer.city }}</td>
                        {# <td>{{ customer.country }}</td> #}
                        <td>{% if customer.isProfessional == true %}
                            <p class="text-start m-0"><img src=" {{ asset('assets/img/Check.png') }} " alt="Check" class="me-2 picto-check-partner"></p>
                        {% endif %}</td>
                        <td>{% if customer.isPartner == true %}
                            <p class="text-start m-0"><img src=" {{ asset('assets/img/Check.png') }} " alt="Check" class="me-2 picto-check-partner"></p>
                        {% endif %}</td>
                        <td>{{ customer.user.firstname }} {{ customer.user.lastname }}</td>
                    </tr>
                </tbody>

            {% endfor %} 
        </table>
    </div>

{% endblock %}
