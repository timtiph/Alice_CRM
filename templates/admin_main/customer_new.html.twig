{% extends 'base.html.twig' %}

{% block title %}Créer un client | Alice CRM{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}


    <h3 class="mb-5">Création d'un client</h3>

    <div class="form mt-3 mt-lg-0">

{{ form_start(form) }}

    {{ form_errors(form) }}
        <div class="mb-3">
        <label class="form-label required" for="customer_user">Utilisateur</label>
        <input 
            id="customer_user" 
            class="form-control" 
            type="text" 
            name="customer[user]" 
            placeholder="{{ user.firstname }} {{ user.lastname }}" 
            disabled="true"></input>
    </div>

    {{ form_row(form.name) }}
    {{ form_row(form.isPartner) }}
    {{ form_row(form.partner) }}
    {{ form_row(form.isProfessional) }}
    {{ form_row(form.siret) }}
    {{ form_row(form.address) }}
    {{ form_row(form.zipCode) }}
    {{ form_row(form.city) }}
    {{ form_row(form.country) }}
    {{ form_row(form.tariffZone) }}
    {{ form_row(form.submit) }}

{{ form_end(form) }}

    </div>

{% endblock %}