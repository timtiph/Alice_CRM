{% extends 'base.html.twig' %}

{% block cssEditor %}
    {{ parent() }}
    <link href="{{ asset('bundles/fosckeditor/contents.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block title %}CRM Alice | Client {{ customer.name }}{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}


    <div class="d-flex flex-column align-items-center flex-sm-row flex-sm-wrap mb-3 me-md-1 justify-content-center justify-content-lg-end">
        <a href="{{ path('app_customer_edit', { 'id': customer.id, 'slug': customer.slug }) }}" class="btn btn-alice-lg btn-block mx-3">Modifier le client</a>
        <a href="{{ path('app_contact_add', { 'id': customer.user.id, 'slug': customer.user.slug }) }}" class="btn btn-alice-lg btn-block mx-3">Ajouter un contact</a>
        <a href="{{ path('app_contract_add', { 'id': customer.id, 'slug': customer.slug }) }}" class="btn btn-alice-lg btn-block mx-3">Ajouter un Contrat</a>
        {# TODO : Ajouter un bouton RDV #}
    </div>

{#### Container principal ####}

<div>

    {#### d-flex global ####}

    <div class="row">

    {# div left #}

        <div class="d-flex flex-wrap flex-column col-12 col-lg-6">


            <div class="col-12 d-flex flex-column p-2 border">

                {#### Identification Client  ####}

                <div class="d-flex flex-column flex-sm-row justify-content-sm-between">
                    <div class="d-flex flex-column">
                        <h3 class="m-0">{{ customer.user.firstname|capitalize }} {{ customer.user.lastname|upper }}</h3>
                        <h6 class="m-0"> {{ customer.name }} </h6>
                    </div>
                    <div class="d-flex flex-column justify-content-between">
                        {% if customer.isProfessional == true %}
                            <p class="text-start m-0"><img src=" {{ asset('assets/img/Check.png') }} " alt="Check" class="me-2 picto-check-professional">Professionnel</p>
                        {% endif %}
                        {% if customer.isPartner == true %}
                            <p class="text-start m-0"><img src=" {{ asset('assets/img/Check.png') }} " alt="Check" class="me-2 picto-check-partner">Partenaire</p>
                        {% endif %}
                    </div>
                </div>

                {### Contact Principal ###}

                <div class="d-flex flex-column mt-2 border">

                    <h5 class="w-100 text-center m-0 py-1 bg-alice-light ">Contact Pricipal</h5>

                    {% if contacts %}

                        {% for contact in contacts %}

                            {% if contact.isMain == true %}
                                <div class="">
                                    <div class="card-body d-flex justify-content-between flex-column flex-sm-row align-items-center">
                                        <div class="d-flex flex-column flex-md-row justify-content-around align-items-center col-12">
                                            <div class="col-12 col-md-6 d-flex flex-column align-items-center">
                                                <div class="bgg-alice-light" style="max-width: 20rem; min-width: 15rem">
                                                    <div class="card-body mb-1">
                                                        <p class="card-title fs-5 fw-medium">{{ contact.firstname|capitalize }} {{ contact.lastname|upper }}</p>
                                                        <p class="card-text mb-1">Email : <strong>{{ contact.email }}</strong></p>
                                                        <p class="card-text mb-1">Tel : <strong>{{ contact.phone }}</strong></p>
                                                        <div class="d-flex justify-content-around px-5">
                                                            <a href="{{ path('app_contact', { 'id': contact.id, 'slug': contact.slug}) }}"><img src="{{ asset('assets/img/eye-solid.svg') }}" alt="Bouton Consulter" class="buttonEditContact"></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            {% endif %}

                        {% endfor %}

                    {% else %}
                        <a href="{{ path('app_contact_add', { 'id': customer.user.id, 'slug': customer.user.slug }) }}" class="btn btn-alice-nw mx-auto">Créer un contact</a>
                    {% endif %}



                </div>

            </div>

                {#### Détail client  ####}


            <div class="col-12">
                <div class="d-flex flex-column mt-1 border p-0">

                    <h5 class="w-100 text-center m-0 bg-alice-light py-1">Détail Client</h5>

                    <table class="table mb-0">
                        <tbody>
                            <tr>
                                <td>Nom</td>
                                <th>{{ customer.name|upper }}</th>
                            </tr>
                            <tr>
                                <td>Siret</td>
                                <th>{{ customer.siret }}</th>
                            </tr>
                            <tr>
                                <td>Adresse</td>
                                <th>{{ customer.address }}</th>
                            </tr>
                            <tr>
                                <td>CP Ville Pays</td>
                                <th>{{ customer.zipCode }} {{ customer.city }} {{ customer.country }}</th>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>

                {#### Autres contacts  ####}

            <div class="col-12">

                <div class="d-flex flex-column mt-1 border p-0">

                    <h6 class="w-100 text-center m-0 bg-alice-light py-1">Autres Contacts</h6>

                    {% for contact in contacts %}
                        {% if contact.isMain == false %}

                    <div class="d-flex flex-column mt-1 border p-0 col-12">

                        <table class="table mb-0 mt-1" data-name="tableContact">


                            <div class="d-flex bg-alice-light justify-content-between">
                                <div class="">
                                    <p class="text-center m-0 py-1 fs-6 fw-medium">{{ contact.firstname|capitalize }} {{ contact.lastname|upper }}</p>
                                    <p class="p-0 m-0 fs-6 fst-italic">{{ contact.position }}</p>
                                </div>
                                <div class="d-flex">
                                    <div class="d-flex">
                                        <a href="{{ path('app_contact', { 'id': contact.id, 'slug': contact.slug}) }}" class="my-auto mx-1"><img src="{{ asset('assets/img/eye-solid.svg') }}" alt="Bouton Consulter" class="buttonEditContact"></a>
                                    </div>
                                    <div data-name="controlButtonDivContact" class="d-flex">
                                        <img src="{{ asset('assets/img/VectorAdd.png') }} " alt="Bouton ouvrir" data-name="imgAddContact">
                                        <img src="{{ asset('assets/img/VectorCloseDark.png') }} " alt="Bouton Fermer" data-name="imgSuppContact" style="display:none;">
                                    </div>
                                </div>
                            </div>


                            <tbody>
                                    <tr>
                                        <td>Email</td>
                                        <th class="overflow-x-hidden">{{ contact.email }}</th>
                                    </tr>
                                    <tr>
                                        <td>Tel</td>
                                        <th>{{ contact.phone }}</th>
                                    </tr>
                            </tbody>

                        </table>
                    </div>

                        {% endif %}
                    {% endfor %}
                </div>

            </div>



        </div>



        {# div right #}

        <div class="d-flex flex-wrap flex-column col-12 col-lg-6 mt-2">

                {#### CONTRATS ####}

            <div class="col-12 flex-column flex-md-row justify-content-md-between">

                <div class="d-flex w-100 flex-column mt-1 border p-0">

                    <h5 class="w-100 text-center m-0 bg-alice-light py-1">Contrats</h5>

                    <div class="d-flex flex-column">

                                {% for contract in contracts %}

                            <div class="d-flex flex-column mt-1 border p-0 col-12">

                                <table class="table mb-0" data-name="tableContract">

                                    <div class="d-flex bg-alice-light justify-content-between">
                                        <div class="">
                                            <h6 class="text-center m-0 py-1">Contrat {{ contract.name }}</h6>
                                        </div>
                                        <div class="d-flex">
                                            <div>
                                                {# href="{{ path('app_contract_edit', { 'id': contract.id }) }}"  #}
                                                    <a href="{{ path('app_contract_show', { 'id': contract.id }) }}" class="mx-1 my-auto"><img src="{{ asset('assets/img/eye-solid.svg') }}" alt="Bouton Voir" class="buttonEditContract"></a>
                                            </div>
                                            <div data-name="controlButtonDivContract">
                                                <img src="{{ asset('assets/img/VectorAdd.png') }} " alt="Bouton ouvrir" data-name="imgAddContract">
                                                <img src="{{ asset('assets/img/VectorCloseDark.png') }} " alt="Bouton Fermer" data-name="imgSuppContract" style="display:none;">
                                            </div>
                                        </div>
                                    </div>

                                    <tbody>
                                        <tr>
                                            <td>Date</td>
                                            <td>{{ contract.date|date("m/d/Y") }}</td>
                                        </tr>
                                        <tr>
                                            <td>Montant facturé</td>
                                            <td>{{ contract.amountCharged }} €</td>
                                        </tr>
                                        <tr>
                                            <td>Temps facturé</td>
                                            <td>{{ contract.timeCharged }} heures</td>
                                        </tr>
                                        <tr>
                                            <td>Montant réel</td>
                                            <td>{{ contract.amountReal }} €</td>
                                        </tr>
                                        <tr>
                                            <td>Temps réel</td>
                                            <td>{{ contract.timeReal }} heures</td>
                                        </tr>
                                        <tr>
                                            <td>Site géré par le contrat</td>
                                            <td><a href="{{ contract.websiteLink }}" target="_blank">{{ contract.websiteLink }}</a></td>
                                        </tr>
                                        <tr>
                                            <td>Fractionnement</td>
                                            <td>{{ contract.paymentFrequency }}</td>
                                        </tr>
                                        <tr>
                                            <td>Commentaires</td>
                                            <td>{{ contract.openArea }}</td>
                                        </tr>
                                    </tbody>

                                </table>

                            </div>

                        {% endfor %}

                    </div>

                </div>

            </div>

        </div>

    </div>

        <div id="dynamicContent">
                {{ display_dynamic_content('test') }}
            </div>

</div>

{% endblock %}

{% block javascriptEditor %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosckeditor/adapters/jquery.js') }}"></script>
    <script src="{{ asset('bundles/fosckeditor/build-config.js') }}"></script>
    <script src="{{ asset('bundles/fosckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('bundles/fosckeditor/config.js') }}"></script>
    <script src="{{ asset('bundles/fosckeditor/styles.js') }}"></script>
{% endblock %}
