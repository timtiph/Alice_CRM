{% extends 'base.html.twig' %}

{% block title %}Créer un utilisateur | Alice CRM{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-5">
        <h1>Création d'un utlisateur</h1>
        <img src="{{ asset('assets/img/VectorBack.png') }}" class="goBack" alt="Retour" onclick="window.history.back();"></img>
    </div>


<div class="form mt-3 mt-lg-0">

    {{ form_start(form) }}

        {{ form_errors(form) }}

        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        {{ form_row(form.role) }}
        
            {{ form_row(form.submit) }}
        


    {{ form_end(form) }}

</div>

{% endblock %}