{% extends 'base.html.twig' %}

{% block title %}Nouvel Zone Tarifaire | Alice CRM{% endblock %}


{% block body %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

    <div class="d-flex align-items-center justify-content-between mb-5">
        <h1>Création d'une nouvelle zone tarifaire</h1>
                <img src="{{ asset('assets/img/VectorBack.png') }}" class="goBack" id="goBackBtn" alt="Retour" onclick="window.history.back();"></img>
    </div>
        
        {% if tariff_zone is empty %}    
            <div class="d-flex justify-content-center justify-content-lg-end">
                <a href="{{ path('app_tariff_zone_index') }}" class="btn btn-alice">Retour à la liste</a>
            </div>

        {% endif %}
        
    <div class="form mt-3">
        {{ include('tariff_zone/_form.html.twig') }}
    </div>
{% endblock %}
