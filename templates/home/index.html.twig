{% extends 'base.html.twig' %}

{% block title %}CRM Alice | Accueil{% endblock %}

{% block body %}
{# {% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %} #}
    

{# Page accueil #}

{# TODO : Revoir armonisation de tous les TITLE des pages #}

<h4>Bonjour {{ app.user.firstname|capitalize }}.</h4>

<div class="container text-center">

    {# {% if is_granted('ROLE_ADMIN') %}

        <div class="d-block d-md-flex justify-content-end form-search">
                {{ form(form) }}
        </div>

    {% endif %} #}

    <div class="d-flex flex-column flex-md-row justify-content-evenly justify-content-lg-end my-4">
        <a href="{{ path('app_forgot_password_request') }}" class="btn btn-alice-lg btn-block mx-lg-2">Modifier mon mot de passe</a>
        <a href="#" class="btn btn-alice-lg btn-block mx-lg-2">Déposer un document</a>
        {% if is_granted('ROLE_ADMIN') %}
        {% else %}
        <a href="mailto:alice.webdeveloppement@gmail.com?subject=Question de {{ app.user }}" class="btn btn-alice-lg btn-block mx-lg-2" >Écrire à Antoine</a>
        {% endif %}
    </div>
{# TODO : reste à gérer si on peut supprimer ou pas les zones tarifaires, les partenariats, la modification : au risque que ça impacte les contrats !! #}
    <div class="row grid-alice">

        {% if is_granted('ROLE_ADMIN') %}
            <div class="my-auto bg-primary">
                <p class="fs-3">Calendrier Google Calendar</p>
                <div id="calendar" class="col-12 bg-primary-subtle">
                    {# Fonctionnalité GOOGLE CALENDAR #}
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center bg-primary-subtle">
                <a href="{{ path('app_partner_index') }}" class="fs-3">Gérer les partenaires</a>
            </div>
            <div class="d-flex justify-content-center align-items-center bg-success-subtle">
                <a href="{{ path('app_tariff_zone_index') }}" class="fs-3">Gérer les Zones Tarifaires</a>
            </div>

        {% endif %}



        <div class="my-auto bg-danger-subtle">
            <a href="{{ path('app_document_list') }}" class="fs-3">Documents</a>
            <div id="documents" class="d-flex flex-column">
                    {% for document in pagination %}
                        <div class="d-flex">
                            <div class="col-6">
                                <p class="m-0">{{ document.date ? document.date|date('d/m/Y') : '' }}</p>
                            </div>
                            <div class="col-6">
                                <a href="{{ path('app_document_show', {'id': document.id}) }}">{{ document.name }}</a>
                            </div>
                        </div>
                    {% endfor %}
            </div>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="my-auto bg-success">
                <p class="fs-3">Statistiques</p>
                <div id="graphic" class="col-12 bg-success-subtle">
                    {# Fonctionnalité Graphique #}
                    {# <canvas class="mb-3 border" id="myChart" width="900" height="380"></canvas> #}
                </div>
            </div>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <div class="my-auto bg-info">
                <p class="fs-3 text-center">Analyse Financière</p>
                <div id="statistics" class="col-12 bg-info-subtle">
                    {# Affichage du tableau des stats #}
                </div>
            </div>
        {% endif %}


            {# Affichage des notifications #}

        <div id="notifications" class="">
            <table class="table table-hover table-alice">
                <p class="fs-3">Notifications</p>
                <tr>
                    <th>Date</th>
                    <th>Message</th>
                </tr>
                {# for each notifications #}
                <tr class="tr-alice">
                    <td>12/03/2022</td>
                    <td>Nouveau documents</td>
                </tr>
                <tr class="tr-alice">
                    <td>15/03/2023</td>
                    <td>Date prochaine Ech Exemple</td>
                </tr>
                {# {% endfor %} #}
            </table>
        </div>

    </div>

</div>



{% endblock %}