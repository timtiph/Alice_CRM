{% extends 'base.html.twig' %}

{% block title %}CRM Alice | Créer un contact{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}

<h3 class="mb-5">Création d'un contact</h3>
    {% if customer %}
        <h5 class="mb-5">Nom du client : {{ customer.name|upper }} </h5>
    {% else %}
        <h5 class="mb-5">Ce contact n'est pas lié à un client </h5>
    {% endif %}

<h5 class="mb-5">Nom de l'utilisateur : {{ user.firstname|capitalize }} </h5>



<div class="form mt-3 mt-lg-0">

    {{ form(form) }}

</div>

{% endblock %}