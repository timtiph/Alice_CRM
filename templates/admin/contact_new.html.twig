{% extends 'base.html.twig' %}

{% block title %}Créer un contact | Alice CRM{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-5">
        <h1>Création d'un contact</h1>
        <img src="{{ asset('assets/img/VectorBack.png') }}" class="goBack" alt="Retour" onclick="window.history.back();"></img>
    </div>

<h4>Pour l'utilisateur : {{ user.firstname }} {{ user.lastname }}</h4>

    {% if user.customer is empty %}
    <p>Statut : {{ user.role }}</p>
    {% else %}
        <h4>Client : {{ user.customer.name }}</h4>
    {% endif %}

<div class="form mt-3 mt-lg-0">

    {{ form_start(form) }}

        {{ form_errors(form) }}

        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.email) }}
        {{ form_row(form.phone) }}
        {{ form_row(form.position) }}
        {{ form_row(form.isMain) }}
        {{ form_row(form.submit) }}

    {{ form_end(form) }}

</div>

{% endblock %}