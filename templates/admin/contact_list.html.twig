{% extends 'base.html.twig' %}

{% block title %}CRM Alice | Liste des contacts{% endblock %}

{% block body %}

<h1>Liste des contacts</h1>

    <div class="d-flex mb-3 justify-content-center justify-content-md-end me-md-5">
        <a href="{{ path('app_contact_add') }}" class="btn btn-alice-lg btn-block">Nouveau contact</a>
    </div>

<div class="table-responsive">

    <table class="table">

        <thead>
            <tr>
                <th scope="col">Nom du client</th>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Fonction</th>
                <th scope="col">Contact Principal</th>
            </tr>
        </thead>

    {% for contact in contacts %}

        <tbody>
            <tr>
                <td>{% if contact.user.customer %}  {{ contact.user.customer.name }} {% endif %}</td>
                <td><a href="{{ path('app_contact', { 'id': contact.id, 'slug': contact.slug}) }}">{{ contact.lastname }} {{ contact.firstname }}</a></td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.phone }}</td>
                <td>{{ contact.position }}</td>

                {% if contact.isMain == 1 %}
                <td class="text-start m-0"><img src=" {{ asset('assets/img/Check.png') }} " alt="Check" class="me-2 picto-check-partner"></td>
                {% else %}
                {% endif %}

            </tr>

        </tbody>

    {% endfor %}

    </table>
    
</div>







{% endblock %}
