{% extends 'base.html.twig' %}

{% block title %}Documents | Alice CRM{% endblock %}

{% block body %}
    <h1>Document</h1>

    <a href="{{ path('app_document_list') }}">Retour Ã  la liste</a>

    <a href="{{ path('app_document_edit', {'id': document.id}) }}">Modifier</a>

    {# {{ include('document/_delete_form.html.twig') }} #}

    <table class="table">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>User</th>
                <td>{{ document.user }}</td>
            </tr>
        {% else %}
        {% endif %}
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ document.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ document.date ? document.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FileName</th>
                <td>{{ document.fileName }}</td>
            </tr>
            <tr>
                <th>Family</th>
                <td>{{ document.family }}</td>
            </tr>
        </tbody>
    </table>


    <div class="embedContainer ms-lg-5">
        <embed src="{{ asset('uploads/documents/' ~ document.fileName) }}" type='application/pdf' alt="{{ document.name }}" width="300" height="1000">
    </div>
{% endblock %}
