{% extends 'base.html.twig' %}

{% block title %}Documents | Alice CRM{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-5">
        <h1>Documents</h1>
                <img src="{{ asset('assets/img/VectorBack.png') }}" class="goBack" id="goBackBtn" alt="Retour" onclick="window.history.back();"></img>
    </div>

    <div class="d-flex justify-content-center justify-content-lg-end mb-md-5">
        <a href="{{ path('app_document_new') }}" class="btn btn-alice">Nouveau document</a>
    </div>

    <table class="table">
        <thead>

            <tr>
                {# sorting of properties based on query components #}
                {% if is_granted('ROLE_ADMIN') %}
                    <th class="d-none d-sm-table-cell">User</th>
                {% else %}
                {% endif %}

                <th {% if pagination.isSorted('d.name') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'Titre', 'd.name') }}
                </th>
                
                <th class="d-none d-sm-table-cell">Description</th>
                
                <th>
                {{ knp_pagination_sortable(pagination, 'Date', 'd.date') }}
                </th>

                <th {% if pagination.isSorted('d.family') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'Famille', 'd.family') }}
                </th>

                <th>Actions</th>
            </tr>

        </thead>
        <tbody>
        {% for document in pagination %}
            <tr>
                {% if is_granted('ROLE_ADMIN') %}
                    <td class="d-none d-sm-table-cell">
                        <div>
                            {% for userElement in document.user.toArray() %}
                                <div class="form-check">
                                    <input class="form-check-input" disabled type="checkbox" id="user_{{ userElement.id }}" name="document[user][]" value="{{ userElement.id }}" {% if document.user.contains(userElement) %}checked{% endif %}>
                                    <label class="form-check-label" for="user_{{ userElement.id }}">
                                    {{ userElement.lastname|capitalize }} {{ userElement.firstname|upper }} {% if userElement.role %} | {{ userElement.role|upper }} {% endif %}
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                    </td>
                {% endif %}
                <td>{{ document.name }}</td>
                <td class="d-none d-sm-table-cell">
                    {% if document.description|length > 40 %}
                        {{ document.description|slice(0, 40) ~ '...' }}
                    {% else %}
                        {{ document.description }}
                    {% endif %}
                </td>

                <td>{{ document.date ? document.date|date('d/m/Y') : '' }}</td>
                <td>{{ document.family }}</td>
                <td>
                    <div class="d-flex ">
                        <a href="{{ path('app_document_show', {'id': document.id}) }}" class="buttonShowDocument m-0 mx-2"><img src="{{ asset('assets/img/eye-solid.svg') }}" alt="Voir"></a>

                        <a href="{{ asset('uploads/documents/' ~ document.fileName) }}" class="buttonDownloadDocument m-0 mx-2" target="_blank" rel="noopener noreferrer" download><img src="{{ asset('assets/img/download-solid.svg') }}" alt="Télécharger" style="height: 23px;"></a>

                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun document</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- afficher les liens de pagination -->
    <div>
        {{ knp_pagination_render(pagination) }}
    </div>


{% endblock %}
