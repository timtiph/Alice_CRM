{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="mb-4">Réinitialiser votre mot de passe</h1>

    <div class="d-flex justify-content-center">
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div class="my-3">
                Entrez votre email et nous vous enverrons un mail avec un lien pour réinitialiser votre mot de passe.
            </div>

            <button class="btn btn-alice-form">Envoyer l'email de réinitialisation</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
